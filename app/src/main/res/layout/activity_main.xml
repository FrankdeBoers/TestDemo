<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.flexboxcustom.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:flexWrap="wrap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/glideLoadGif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="glide加载Gif"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/glideImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="glide加载Gif"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottomReplyBackground"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingHorizontal="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/layoutHeadView"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_height="20dp"
                tools:layout_width="20dp" />

            <TextView
                android:id="@+id/tvReplyCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/layoutHeadView"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="999条回复"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/imgDot"
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:gravity="center_vertical"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintBottom_toBottomOf="@id/tvReplyCount"
                app:layout_constraintStart_toEndOf="@id/tvReplyCount"
                app:layout_constraintTop_toTopOf="@id/tvReplyCount"
                tools:text="最后更新于 3分钟前"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tvReplyTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@id/tvReplyCount"
                app:layout_constraintStart_toEndOf="@id/imgDot"
                app:layout_constraintTop_toTopOf="@id/tvReplyCount"
                tools:text="最后更新于 3分钟前"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/imgReplyRightArrow"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_toEndOf="@+id/tvReplyCount"
                android:gravity="center_vertical"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintBottom_toBottomOf="@id/tvReplyTime"
                app:layout_constraintStart_toEndOf="@id/tvReplyTime"
                app:layout_constraintTop_toTopOf="@id/tvReplyTime"
                app:tint="@color/black" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/longLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="长链接"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/sendMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发消息"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/startSecondActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="启动第二Activity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/startWeakActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="启动Weak"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/startThread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="线程池"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/startCoroutineActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="协程+线程"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/startBmp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图片加载"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/startOkHttp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OkHttp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/startBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Barrier"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/startRV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RecyclerView测试"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </com.google.android.flexboxcustom.FlexboxLayout>
</androidx.constraintlayout.widget.ConstraintLayout>