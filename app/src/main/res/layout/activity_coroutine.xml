<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.flexboxcustom.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:flexWrap="wrap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/startCoroutine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="启动协程"
            android:textSize="20dp" />

        <Button
            android:id="@+id/jobCoroutine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jobCoroutine"
            android:textSize="20dp" />

        <Button
            android:id="@+id/supervisorJobCoroutine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="supervisorJobCoroutine"
            android:textSize="20dp" />

        <Button
            android:id="@+id/multiThreadVisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="线程可见性"
            android:textSize="20dp" />
    </com.google.android.flexboxcustom.FlexboxLayout>
</androidx.constraintlayout.widget.ConstraintLayout>